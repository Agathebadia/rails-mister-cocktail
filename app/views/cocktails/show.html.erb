<h1><%= @cocktail.name %></h1>

<ul>
<% @cocktail.doses.each do |dose| %>
<li>
<h2><%= dose.description %> <%= link_to 'Remove dose', dose_path(dose), :method => :delete %></h2>
</li>
<% end %>
</ul>

<ul>
<li><%= link_to 'New dose', new_cocktail_dose_path(@cocktail) %></li>
<li><%= link_to 'Back to list', cocktails_path %></li>
</ul>
